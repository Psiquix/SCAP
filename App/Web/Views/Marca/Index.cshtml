@model IEnumerable<Infrastructure.Models.Marca>

@{
    ViewBag.Title = "Listado de Marcas";
}

@*<script src="~/Scripts/sweetalert.min.js"></script>*@

<div class="jumbotron">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <center><h2>Listado de Marcas</h2></center>

    <button type="button" class="btn btn-success btnMant">
        @Html.ActionLink("Nuevo", "Create")
    </button>
    <div class="row">
        <div class="col-lg-9">
            <table class="table table-hover">
                <thead>
                    <tr class="table-active">
                        <th>
                            @Html.DisplayNameFor(model => model.id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idTipoProducto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descripcion)
                        </th>
                    </tr>
                </thead>
                <tbody id="result">
                    @foreach (var item in Model)
                    {
                        <tr class="table-secondary">
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.idTipoProducto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary btnMant" style="color:aliceblue">
                                    @Html.ActionLink("Editar", "Edit", new { id = item.id })
                                </button>|
                                <button type="button" class="btn btn-danger btnMant" id="btnAlertMessage" style="color:aliceblue">
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

