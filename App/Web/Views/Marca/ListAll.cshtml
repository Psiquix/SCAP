@model IEnumerable<Infrastructure.Models.Marca>

@{
    ViewBag.Title = "Listado completo";
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


<div class="jumbotron">
    <center><h2>Listado completo de marcas</h2></center>
    <div class="col-lg-1">
        <a href="@Url.Action("Create", "Marca")" title="Crear" class="btn btn-success">
            Nuevo
        </a>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idTipoProducto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.estado)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idTipoProducto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                @if (item.estado == true)
                                {
                                    <p>Activo</p>
                                }
                                else
                                {
                                    <p>Desactivo</p>
                                }

                            </td>
                            <td>
                                <a href="@Url.Action("EditAll", "Marca",new { id = item.id })" title="Editar" class="btn btn-primary">
                                    Editar
                                </a>|
                                <a href="@Url.Action("Delete", "Marca",new { id = item.id })" title="Delete" class="btn btn-danger">
                                    Desactivar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>

