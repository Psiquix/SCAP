@model IEnumerable<Infrastructure.Models.Producto>

@{
    ViewBag.Title = "Listado de Productos";
}
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <center><h2>Listado de Productos</h2></center>
                <div class="row">
                    @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-success btnMant", @type = "button" })|
                    @{
                        Infrastructure.Models.Usuario oUser;
                        oUser = (Infrastructure.Models.Usuario)Session["User"];
                        if (oUser != null && oUser.idRol == 1)
                        {
                            <a href="@Url.Action("ProductoPDF", "Reporte")" title="Reporte" class="btn btn-secondary" type="button">
                                Generar PDF<img src="~/Img/icons/pdf.png" alt="PDF" style="height:30px; width:auto; margin:10px" />
                            </a>
                        }
                    }

                </div>
                <div class="row">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-active">
                                <th>
                                    @Html.DisplayNameFor(model => model.nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.precioUnitario)
                                </th>
                                <th>
                                    Cantidad
                                </th>
                                @*
                                *@
                                <th>
                                    @Html.DisplayNameFor(model => model.imagen)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.estado)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="table-secondary">
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td>
                                    ₡ @Html.DisplayFor(modelItem => item.precioUnitario)
                                </td>
                                @if (item.cantidadNum != 0)
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cantidadNum) Unids
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cantidadPeso) Kg
                                    </td>
                                }

                                <td>
                                    <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(item.imagen)" alt="Imagen @Html.DisplayFor(modelItem => item.nombre)" class="img-thumbnail imgIndex" />
                                </td>
                                <td>
                                    @if ((bool)item.estado)
                                    {
                                        <p>Activo</p>
                                    }
                                    else
                                    {
                                        <p>Inactivo</p>
                                    }
                                </td>

                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-primary btnMant", @type = "button" })
                                    |
                                    @Html.ActionLink("Eliminar", "Disable", new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger btnMant", @type = "button" })

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>

    </div>
</div>