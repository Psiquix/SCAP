@model IEnumerable<Infrastructure.Models.Orden>

@{
    ViewBag.Title = "Lista Apartados";
}
<div class="jumbotron">
    <div class="container">
        <div class="row">

            <center><h2>Lista de apartados</h2></center>

            <div class="row">
                @{
                    Infrastructure.Models.Usuario oUser;
                    oUser = (Infrastructure.Models.Usuario)Session["User"];
                    if (oUser != null && oUser.idRol == 1)
                    {
                        <a href="@Url.Action("OrdenPDF", "Reporte")" title="Reporte" class="btn btn-secondary" type="button">
                            Generar PDF<img src="~/Img/icons/pdf.png" alt="PDF" style="height:30px; width:auto; margin:10px" />
                        </a> 
                    }
                }



            </div>
            <div class="row">
                <table class="table table-hover">
                    <thead>
                        <tr class="table-active">
                            <th>
                                @Html.DisplayNameFor(model => model.id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombreCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApellidoCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.numeroCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.correoCliente)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.total)
                            </th>
                            <th>
                                Acciones
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="table-secondary">
                                <td>
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td>
                                    @{
                                        string fecha = item.fecha.Value.ToShortDateString();
                                        <p>
                                            @fecha
                                        </p>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreCliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApellidoCliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.numeroCliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.correoCliente)
                                </td>

                                <td>
                                    ₡@Html.DisplayFor(modelItem => item.total)
                                </td>
                                <td>
                                    @if (item.estado == true)
                                    {
                                        @*<button type="button" class="btn btn-success btnMant" style="color:aliceblue">
                                                @Html.ActionLink("Completar", "Completar", new { id = item.id })
                                            </button>*@
                                        @Html.ActionLink("Completar", "Completar", new { id = item.id }, htmlAttributes: new { @class = "btn btn-success btnMant", @type = "button" })

                                    }
                                    else
                                    {
                                        <p style="font-size:12px">
                                            Completo
                                        </p>
                                    }
                                    |
                                    @{
                                        if (oUser != null && oUser.idRol == 1)
                                        {
                                            @Html.ActionLink("Editar", "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-primary btnMant", @type = "button" })
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


