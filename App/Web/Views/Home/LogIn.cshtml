@model Infrastructure.Models.Usuario
@{
    ViewBag.Title = "Log-in";
}


    <div class="row logIn">
        <div class="col-md-12 text-center">
            @using (Html.BeginForm("LogIn", "Home", FormMethod.Post))
            {
                <h2>¡Bienvenido a Taller Gorro!</h2>
                <h4>Por favor, digíte sus datos de inicio.</h4>
                <img src="~/Img/Logo.png" alt="LoginImg" style="height: auto; width:20%;" />
                <br />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.email)
                    <div>
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>

                <br />

                    @Html.LabelFor(model => model.contrasena)
                    <br />
                    <div>
                        @Html.PasswordFor(model => model.contrasena, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.contrasena, "", new { @class = "text-danger" })
                    </div>

                <br />

                <div>
                    <div>
                        <input type="submit" value="Iniciar sesión" class="btn btn-success" />

                    </div>
                </div>
                <br />
            }
        </div>
    </div>

