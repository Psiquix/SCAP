@model IEnumerable<Infrastructure.Models.Producto>

@{
    ViewBag.Title = "Catálogo de Productos";
}

<div class="jumbotron">
    <center><h2>Catálogo de Productos</h2></center>
    <br />

    <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-4" style="margin-bottom: 10px; margin-top:10px">
                    <div class="item-catalogo" style="padding: 10px; text-align:center">
                        <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(item.imagen)"
                             alt="Imagen @Html.DisplayFor(modelItem => item.nombre)" class="img-thumbnail imgCat" />
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.nombre)</h5>
                            <hr class="rounded" />
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.descripcion)</h5>
                            <hr class="rounded" />
                            @*<h6 class="card-subtitle mb-2 text-muted"> @Html.DisplayNameFor(model => model.TipoProducto): @Html.DisplayFor(modelItem => item.TipoProducto.descripcionTipo)</h6>*@
                            <h6 class="card-text">₡@Html.DisplayFor(modelItem => item.precioUnitario)</h6>
                            <button type="button" class="btn btn-success btnMant" style="color:aliceblue">
                                @Html.ActionLink("Más información", "", new { id = item.id })
                            </button>
                            <button type="button" class="btn btn-primary btnMant" style="color:aliceblue">
                                @Html.ActionLink("Agregar al carrito", "Save", new { id = item.id })<img src="~/Img/icons/shopping-cart.png" style="height: 30px; width: auto; margin-left: 10px" alt="Alternate Text" />
                            </button>
                            @*@Html.ActionLink("", "Save", new { id = item.id })*@
                        </div>
                    </div>
                </div>
            }
      
    </div>
</div>
